---
import Weather from '../components/Weather.tsx';
import PulseChat from '../components/PulseChat.tsx';
import EcoTrack from '../components/EcoTrack.tsx'; 
import VibeUI from '../components/VibeUI.tsx';      
import '../styles/global.css';

const projects = [
  {
    id: "ecotrack",
    title: "EcoTrack SaaS",
    description: "A real-time carbon footprint tracker with automated PDF reporting.",
    tech: ["Python", "PostgreSQL", "React"],
    type: "Full-Stack App",
    link: "#",
    isApp: true 
  },
  {
    id: "vibeui",
    title: "VibeUI Library",
    description: "Atomic design system with interactive theme controls.",
    tech: ["TypeScript", "Tailwind", "Radix"],
    type: "Design System",
    link: "#",
    isApp: true 
  },
  {
    id: "pulse-chat-app",
    title: "PulseChat AI",
    description: "Real-time collaboration tool with AI-powered sentiment analysis.",
    tech: ["Python", "Socket.io", "Redis"],
    type: "Full-Stack App",
    link: "javascript:void(0)",
    isApp: true
  }
];
---

<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ayodeji Abiodun | Full-Stack Designer</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800;900&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Inter', sans-serif; cursor: default; }
        .glass-card { 
            background: rgba(15, 23, 42, 0.3); 
            border: 1px solid rgba(255, 255, 255, 0.05); 
            backdrop-filter: blur(16px); 
        }
        .bento-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
            gap: 1.5rem;
        }
        @keyframes gradient-move {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }
        .animate-gradient { background-size: 200% 200%; animation: gradient-move 6s ease infinite; }
    </style>
</head>

<body class="bg-[#020617] text-slate-300 selection:bg-indigo-500/30 selection:text-indigo-200">

    <nav class="fixed top-6 left-1/2 -translate-x-1/2 w-[90%] max-w-4xl z-50 glass-card rounded-2xl py-3 px-6 flex justify-between items-center border-white/10">
        <span class="font-black text-xl text-white tracking-tighter">AA<span class="text-indigo-500">.</span></span>
        <div class="flex items-center gap-8 text-xs font-bold uppercase tracking-widest">
            <a href="#services" class="hover:text-white transition">Services</a>
            <a href="#projects" class="hover:text-white transition">Work</a>
            <a href="#lab" class="hover:text-white transition">Lab</a>
            <a href="mailto:abiodunkiddo@gmail.com" class="bg-white text-black px-5 py-2.5 rounded-xl hover:scale-105 transition-transform">Hire Me</a>
        </div>
    </nav>

    <main class="max-w-6xl mx-auto px-6">
        <section class="min-h-screen flex flex-col justify-center items-center text-center pt-20">
            <div class="mb-6 py-1 px-3 glass-card rounded-full border-indigo-500/30">
                <span class="text-[10px] font-black uppercase tracking-[0.2em] text-indigo-400">2026 Portfolio / v3.0</span>
            </div>
            <h1 class="text-6xl md:text-8xl font-black text-white tracking-tighter leading-[0.9]">
                Building for <br/> 
                <span class="text-transparent bg-clip-text bg-gradient-to-r from-indigo-400 via-cyan-400 to-indigo-400 animate-gradient">the next web.</span>
            </h1>
            <p class="mt-8 text-lg text-slate-400 max-w-xl leading-relaxed">
                Full-stack developer & interface designer. I craft high-performance applications with a focus on polished ergonomics.
            </p>
            <div class="mt-12">
                <a href="#projects" class="group flex items-center gap-2 px-8 py-4 bg-indigo-600 text-white font-bold rounded-2xl hover:bg-indigo-500 transition-all">
                    Explore Work <span class="group-hover:translate-x-1 transition-transform">→</span>
                </a>
            </div>
        </section>

        <section id="services" class="py-32 border-t border-slate-800/30 scroll-mt-20">
            <div class="grid md:grid-cols-3 gap-8">
                <div class="md:col-span-3 mb-12">
                    <h2 class="text-4xl font-black text-white tracking-tight">What I Do</h2>
                    <p class="text-slate-500 mt-2 max-w-lg">
                        I bridge the gap between design and development, creating seamless digital experiences.
                    </p>
                </div>

                <div class="glass-card p-8 rounded-3xl group hover:border-indigo-500/30 transition-all duration-500">
                    <div class="h-12 w-12 bg-indigo-500/10 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
                        <svg class="w-6 h-6 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-bold text-white mb-4">UI/UX Design</h3>
                    <p class="text-sm text-slate-400 leading-relaxed">
                        Creating intuitive interfaces and delightful user experiences that keep users engaged and coming back.
                    </p>
                </div>

                <div class="glass-card p-8 rounded-3xl group hover:border-indigo-500/30 transition-all duration-500">
                    <div class="h-12 w-12 bg-cyan-500/10 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
                        <svg class="w-6 h-6 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-bold text-white mb-4">Full-Stack Development</h3>
                    <p class="text-sm text-slate-400 leading-relaxed">
                        Building robust applications from database architecture to responsive front-end interfaces.
                    </p>
                </div>

                <div class="glass-card p-8 rounded-3xl group hover:border-indigo-500/30 transition-all duration-500">
                    <div class="h-12 w-12 bg-rose-500/10 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
                        <svg class="w-6 h-6 text-rose-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-bold text-white mb-4">Responsive Design</h3>
                    <p class="text-sm text-slate-400 leading-relaxed">
                        Ensuring your application looks stunning and works perfectly across all devices and screen sizes.
                    </p>
                </div>
            </div>
        </section>

        <section id="projects" class="py-32 scroll-mt-20">
            <div class="flex justify-between items-end mb-12">
                <div>
                    <h2 class="text-4xl font-black text-white tracking-tight">Selected Works</h2>
                    <p class="text-slate-500 mt-2">Solving complex problems with simple interfaces.</p>
                </div>
            </div>

            <div class="bento-grid">
                {projects.map((p) => (
                    <div id={p.id} class="glass-card p-8 rounded-[2rem] flex flex-col justify-between group hover:border-indigo-500/40 transition-all duration-500">
                        <div>
                            <div class="flex justify-between items-center mb-6">
                                <span class="text-[10px] font-bold text-indigo-400 border border-indigo-500/20 px-3 py-1 rounded-full">{p.type}</span>
                                <div class="flex gap-2">
                                    {p.tech.map(t => <span class="text-[10px] text-slate-500 font-mono">{t}</span>)}
                                </div>
                            </div>
                            
                            <h3 class="text-2xl font-bold text-white mb-4">{p.title}</h3>

                            {p.isApp ? (
                                <div class="mt-4 bg-black/20 rounded-2xl p-4 border border-white/5 min-h-[300px]">
                                    {p.id === 'pulse-chat-app' && <PulseChat client:load />}
                                    {p.id === 'ecotrack' && <EcoTrack client:load />}
                                    {p.id === 'vibeui' && <VibeUI client:load />}
                                </div>
                            ) : (
                                <p class="text-slate-400 text-sm mb-8 leading-relaxed">{p.description}</p>
                            )}
                        </div>

                        <div class="mt-8">
                            {p.isApp ? (
                                <span class="text-[10px] font-black uppercase tracking-widest text-indigo-400 flex items-center gap-2">
                                    <span class="relative flex h-2 w-2">
                                        <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-indigo-400 opacity-75"></span>
                                        <span class="relative inline-flex rounded-full h-2 w-2 bg-indigo-500"></span>
                                    </span>
                                    System Live
                                </span>
                            ) : (
                                <a href={p.link} class="inline-flex items-center gap-2 text-xs font-black uppercase tracking-widest text-white hover:gap-4 transition-all">
                                    View Case Study <span>→</span>
                                </a>
                            )}
                        </div>
                    </div>
                ))}
            </div>
        </section>

        <section id="lab" class="py-32 border-t border-slate-800/50 scroll-mt-20">
            <div class="grid md:grid-cols-2 gap-12 items-center">
                <div>
                    <h2 class="text-4xl font-black text-white tracking-tight mb-6">Live Lab: <br/><span class="text-indigo-500">Atmosphere</span></h2>
                    <p class="text-slate-400 leading-relaxed mb-8">Testing serverless Python logic and real-time data fetching.</p>
                    <div class="flex gap-4 items-center">
                        <div class="h-2 w-2 rounded-full bg-green-500 animate-pulse"></div>
                        <span class="text-[10px] font-bold uppercase tracking-widest text-slate-500">Server Status: Online</span>
                    </div>
                </div>
                <div class="glass-card p-8 rounded-[2.5rem] border-indigo-500/20">
                    <Weather client:load /> 
                </div>
            </div>
        </section>
    </main>

    <footer class="py-20 text-center border-t border-slate-800/50">
        <p class="text-slate-600 text-sm font-medium tracking-tight">© 2026 Ayodeji Abiodun. Engineered with <span class="text-white">Astro 5.0</span></p>
    </footer>
</body>
</html>